<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_bathroom"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Kamar Mandi Dalam"
            android:buttonTint="@color/colorBlueIvy"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_bathroom"
            android:text="Wifi"
            android:buttonTint="@color/colorBlueIvy"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_free_access"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/checkbox_wifi"
            android:text="Akses 24 Jam"
            android:buttonTint="@color/colorBlueIvy"/>

    </RelativeLayout>

</RelativeLayout>